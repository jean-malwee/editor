{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "REACT_APP_GCS_BUCKET_NAME",
    "REACT_APP_GCS_PROJECT_ID",
    "PORT",
    "HOST",
    "GCS_PROJECT_ID",
    "GCS_BUCKET_NAME",
    "GCS_KEY_FILENAME",
    "LOG_LEVEL",
    "RUST_BACKEND_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "tsup.config.ts",
        ".env*"
      ],
      "outputs": [".next/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:deploy": {
      "cache": false
    }    
  }
}